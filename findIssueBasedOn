def findIssueBasedOnExpressionSearchedOnTitleAndDescription(searchString, user_id):
    searchString = searchString.lower()
    query_stmt = "SELECT * FROM A3_ISSUE WHERE (LOWER(Title) LIKE '%" + searchString + "%' OR LOWER(Description) LIKE '%" 
    query_stmt = query_stmt + searchString + "%') AND (Creator = " + user_id + " OR Resolver = " + user_id 
    query_stmt = query_stmt + " OR Verifier = " + user_id + ")"
    issue_db = pgquery(conn, query_stmt, None)
    issue = [{
        'title': row[0],
        'creator': row[1],
        'resolver': row[2],
        'verifier': row[3],
        'description': row[4],
        'issue_id': row[5]
    } for row in issue_db]

    return issue


